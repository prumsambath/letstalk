<div class="main">
<div class="container">
	<div class="row">
    <div class="col-md-9">
      <div class="panel">
        <div class="panel-heading clearfix">
          <h3 class="panel-title">All Events</h3>
        </div>
        <div class="panel-body">
          <div class="list-group list-group-campo recordable">
            <% if @events.any? %>
              <%= render @events %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <% if current_user %>
      <div class="col-md-3">
        <div class="panel">
          <div class="panel-body">
            <%= link_to "Create event", new_event_path, class: "btn btn-success btn-block" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>

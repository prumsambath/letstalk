<div class="container">
	<div class="row">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>Topic</th>
          <th>Due Date</th>
          <th>Due Time</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td>
              <%= link_to event.topic, event %>
              <div class="organier">by <%= event.user.full_name %></div>
            </td>

            <td><%= event.due_at.strftime("%B %d, %Y") %></td>
            <td><%= event.due_at.strftime("%I:%M%p") %></td>
            <td><%= link_to "I want to join", "#", class: "btn btn-sm btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @events %>
  </div>
</div>

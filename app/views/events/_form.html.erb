<%= form_for [current_user, @event] do |f| %>
  <div class="row">
    <div class="col-md-9">
      <div class="form-group">
        <%= f.label :topic %>
        <%= f.text_field :topic, class: "form-control", rows: 10, cols: 20 %>
      </div>

      <div class="form-group">
        <%= f.label :agenda %>
        <%= f.text_area :agenda, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :due_at %>
        <%= f.datetime_select :due_at %>
      </div>

      <div class="form-group">
        <%= f.label :seat %>
        <%= f.select :seat, ((1..5).map {|i| [i,i] } ) %>
      </div>

      <div class="form-group">
        <%= f.submit "Create event", class: "btn btn-success" %>
      </div>
    </div>
  </div>
<% end %>

